{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "src/*": ["src/*"],
      "@generated/*": ["@generated/*"]
    } 
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "@generated/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules", "public", "**/*.graphql"]
}
